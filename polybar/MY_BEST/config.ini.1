[bar/main]
width = 100%
height = 30pt
radius = 0
dpi = 100
background = ${gruvbox.dark}
foreground = ${gruvbox.cream}
line-size = 0pt
border-size = 0pt
border-color = ${gruvbox.transparent}
module-margin = 0
padding-left=0pt
padding-right=0pt
separator ="."
separator-foreground = ${gruvbox.transparent}

font-0 = Roboto condensed:size=13:weight=bold;3
